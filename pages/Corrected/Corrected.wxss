/* pages/Practice/Practice.wxss */
page {
  height: 100%;
  background: #fff;
}
.weiketang {
  background: #fff;
  padding: 30rpx;
}
.weiketang-btn button {
  width: 200rpx;
  height: 60rpx;
}

.scroll-view {
  position: relative;
  padding-right:100rpx;
}
.posi-ab {
  position: absolute;
  right: 0px;
  top: 0px;
  height:90rpx;
  line-height:90rpx;
  background: #fff;
  width: 100rpx;
  text-align: center;
  line-height: 90rpx;
}
.posi-ab image {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: sub;
}

.view-li {
  overflow: hidden;
  background: #fff;
  font-size:28rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:50rpx; 
  padding: 30rpx; 
  border-bottom:2rpx solid rgba(220,220,220,0.4);
}
.view-li .shu {
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
}

.view-list {
  padding-bottom: 30rpx;
  background: #fff;
  border-top:2rpx solid rgba(220,220,220,0.4);
}

.view-li-r {
  float: right;
  width: 620rpx;
}